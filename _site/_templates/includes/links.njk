
{% if item.data.links != null %}
  <div class="item-links">
  {% for item in item.data.links %}
    {% if item.lil != null %}<a href="{{ item.url }}" class="mr-3 mr-lg-1 text-secondary"><i class="fab fa-linkedin mr-1"></i><span class="d-none d-lg-inline text-body">on LinkedIn</a></span>{% endif %}
    {% if item.repo != null %}<a href="{{ item.url }}" class="mr-3 mr-lg-1 text-secondary"><i class="fab fa-github mr-1"></i><span class="d-none d-lg-inline text-body">repo</a></span>{% endif %}
    {% if item.demo != null %}<a href="{{ item.url }}" class="mr-3 mr-lg-1 text-secondary"><i class="fas fa-globe mr-1"></i><span class="d-none d-lg-inline text-body">demo</a></span>{% endif %}
  {% endfor %}
  </div>
{% endif %}  
